<Window
    x:Class="LiveWallpaper.Views.CreateWallpaperView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveWallpaper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:LiveWallpaper.Server.Models"
    Width="525"
    Height="350"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="名称" />
        <TextBox
            x:Name="Name"
            x:Uid="txt_Name"
            Grid.Column="1" />
        <TextBlock
            x:Uid="txtBlock_WallpaperType"
            Grid.Row="1"
            Text="壁纸类型" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            SelectedValue="{Binding SelectedType, Mode=TwoWay}"
            SelectedValuePath="Tag">
            <ComboBoxItem x:Uid="cbItem_TypeApp" Tag="{x:Static model:WallpaperType.Exe}">应用程序壁纸</ComboBoxItem>
            <ComboBoxItem x:Uid="cbItem_TypeWeb" Tag="{x:Static model:WallpaperType.HTML}">网页壁纸</ComboBoxItem>
            <ComboBoxItem x:Uid="cbItem_TypeVideo" Tag="{x:Static model:WallpaperType.Video}">视频壁纸</ComboBoxItem>

        </ComboBox>
        <TextBlock
            x:Name="DirDesc"
            x:Uid="txtBlock_DirDesc"
            Grid.Row="2"
            Grid.Column="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            Text="参数"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Dir"
            x:Uid="txt_Dir"
            Grid.Row="2"
            Grid.Column="1"
            local:DragManager.CanDrag="True" />
        <TextBlock
            x:Name="EndPointDesc"
            x:Uid="txtBlock_Parameter2"
            Grid.Row="3"
            Grid.Column="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            Text="参数2"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="EndPoint"
            x:Uid="txt_EndPoint"
            Grid.Row="3"
            Grid.Column="1"
            local:DragManager.CanDrag="True" />
        <TextBlock
            x:Name="ArgumentsDesc"
            x:Uid="txtBlock_ArgumentsDesc"
            Grid.Row="4"
            Grid.Column="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            Text="参数2"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Arguments"
            x:Uid="txt_Arguments"
            Grid.Row="4"
            Grid.Column="1"
            local:DragManager.CanDrag="True" />
        <TextBlock
            x:Uid="txtBlock_Author"
            Grid.Row="5"
            Text="作者"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Author"
            x:Uid="txt_Author"
            Grid.Row="5"
            Grid.Column="1" />
        <StackPanel
            Grid.Row="9"
            Grid.ColumnSpan="10"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button x:Name="Apply" x:Uid="btn_Apply">测试壁纸</Button>
            <Button
                x:Name="Clean"
                x:Uid="btn_Clean"
                Margin="10,0">
                取消测试
            </Button>
        </StackPanel>
        <StackPanel
            Grid.Row="12"
            Grid.ColumnSpan="10"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button x:Name="Generate" x:Uid="btn_Generate">生成壁纸</Button>
            <Button
                x:Name="Publish"
                x:Uid="btn_Publish"
                Margin="10,0">
                发布壁纸
            </Button>
        </StackPanel>
        <!--<Button Grid.Row="4" Click="btn_RestartExploer">重置桌面</Button>-->
    </Grid>
</Window>
