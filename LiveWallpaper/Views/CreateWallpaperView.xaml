<Window
    x:Class="LiveWallpaper.Views.CreateWallpaperView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:DZY.DotNetUtil.WPF.XamlHelpers;assembly=DZY.DotNetUtil.WPF"
    xmlns:lan="clr-namespace:MultiLanguageManager;assembly=MultiLanguageManager.WPF"
    xmlns:local="clr-namespace:LiveWallpaper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:LiveWallpaper.Server.Models"
    Width="725"
    Height="550"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid
            helper:DragHelper.CanDrag="True"
            helper:DragHelper.Data="{Binding Dir, Mode=TwoWay}"
            Background="LightGray">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">拖入视频文件</TextBlock>
        </Grid>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <CheckBox Content="启用桌面预览" />
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" lan:Xaml.Key="common_name" />
            <TextBox x:Name="Name" Grid.Column="1" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Stretch"
                lan:Xaml.Key="desc"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="Desc"
                Grid.Row="2"
                Grid.Column="1"
                helper:DragHelper.CanDrag="True" />

            <TextBlock
                Grid.Row="5"
                lan:Xaml.Key="common_author"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="Author"
                Grid.Row="5"
                Grid.Column="1" />
        </Grid>
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button Margin="3,0" lan:Xaml.Key="common_save">确定</Button>
            <Button Margin="3,0" lan:Xaml.Key="common_cancel">取消</Button>
        </StackPanel>
        <!--<Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" lan:Xaml.Key="common_name" />
            <TextBox x:Name="Name" Grid.Column="1" />
            <TextBlock
                Grid.Row="1"
                lan:Xaml.Key="wallpaper_type"
                Text="壁纸类型" />
            <ComboBox
                Grid.Row="1"
                Grid.Column="1"
                SelectedValue="{Binding SelectedType, Mode=TwoWay}"
                SelectedValuePath="Tag">
                <ComboBoxItem lan:Xaml.Key="type_app" Tag="{x:Static model:WallpaperType.Exe}">应用程序壁纸</ComboBoxItem>
                <ComboBoxItem lan:Xaml.Key="type_web" Tag="{x:Static model:WallpaperType.WEB}">网页壁纸</ComboBoxItem>
                <ComboBoxItem lan:Xaml.Key="type_video" Tag="{x:Static model:WallpaperType.Video}">视频壁纸</ComboBoxItem>
            </ComboBox>
            <TextBlock
                x:Name="DirDesc"
                Grid.Row="2"
                Grid.Column="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Stretch"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="Dir"
                Grid.Row="2"
                Grid.Column="1"
                helper:DragHelper.CanDrag="True" />
            <TextBlock
                x:Name="EndPointDesc"
                Grid.Row="3"
                Grid.Column="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Stretch"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="EndPoint"
                Grid.Row="3"
                Grid.Column="1"
                helper:DragHelper.CanDrag="True" />
            <TextBlock
                x:Name="ArgumentsDesc"
                Grid.Row="4"
                Grid.Column="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Stretch"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="Arguments"
                Grid.Row="4"
                Grid.Column="1"
                helper:DragHelper.CanDrag="True" />
            <TextBlock
                Grid.Row="5"
                lan:Xaml.Key="common_author"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="Author"
                Grid.Row="5"
                Grid.Column="1" />
            <StackPanel
                Grid.Row="9"
                Grid.ColumnSpan="10"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button x:Name="Apply" lan:Xaml.Key="test" />
                <Button
                    x:Name="Clean"
                    Margin="10,0"
                    lan:Xaml.Key="common_cancel" />
            </StackPanel>
            <StackPanel
                Grid.Row="12"
                Grid.ColumnSpan="10"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button x:Name="Generate" lan:Xaml.Key="generate" />
                <Button
                    x:Name="Publish"
                    Margin="10,0"
                    lan:Xaml.Key="publish">
                    发布壁纸
                </Button>
            </StackPanel>


        </Grid>-->
    </Grid>
</Window>
