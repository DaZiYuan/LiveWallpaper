<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:lan="clr-namespace:MultiLanguageManager;assembly=MultiLanguageManager.WPF"
    xmlns:tb="http://www.hardcodet.net/taskbar">

    <ContextMenu
        x:Key="ContextMenu"
        cal:Action.Target="ContextMenuViewModel"
        x:Shared="false">
        <MenuItem cal:Message.Attach="About()" lan:Xaml.Key="about" />
        <!--<MenuItem cal:Message.Attach="OpenConfigFolder()" Header="配置目录" />
        <MenuItem
            cal:Message.Attach="StartWithOS()"
            Header="开机启动"
            IsCheckable="True"
            IsChecked="{Binding IsAutoLaunch, Mode=OneWay}" />-->
        <Separator />

        <MenuItem cal:Message.Attach="Config()" lan:Xaml.Key="config" />
        <Separator />
        <MenuItem cal:Message.Attach="ExitApp()" lan:Xaml.Key="exit" />
    </ContextMenu>
    <tb:TaskbarIcon x:Key="NotifyIcon" ContextMenu="{StaticResource ContextMenu}" />
</ResourceDictionary>