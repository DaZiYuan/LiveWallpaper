<Window
    x:Uid="Window_1" x:Class="WallpaperTool.Views.CreateWallpaperView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WallpaperTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:WallpaperTool.Server.Models"
    Width="525"
    Height="350"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid x:Uid="Grid_1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Uid="ColumnDefinition_1" Width="auto" />
            <ColumnDefinition x:Uid="ColumnDefinition_2" Width="200" />
            <ColumnDefinition x:Uid="ColumnDefinition_3" Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Uid="RowDefinition_1" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_2" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_3" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_4" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_5" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_6" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_7" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_8" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_9" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_10" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_11" Height="auto" />
            <RowDefinition x:Uid="RowDefinition_12" Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Uid="TextBlock_1" Grid.Row="0" Text="名称" />
        <TextBox x:Uid="Name" x:Name="Name" Grid.Column="1" />
        <TextBlock x:Uid="TextBlock_2" Grid.Row="1" Text="壁纸类型" />
        <ComboBox
            x:Uid="ComboBox_1" Grid.Row="1"
            Grid.Column="1"
            SelectedValue="{Binding SelectedType, Mode=TwoWay}"
            SelectedValuePath="Tag">
            <ComboBoxItem x:Uid="ComboBoxItem_1" Tag="{x:Static model:WallpaperType.Exe}">应用程序壁纸</ComboBoxItem>
            <ComboBoxItem x:Uid="ComboBoxItem_2" Tag="{x:Static model:WallpaperType.HTML}">网页壁纸</ComboBoxItem>
            <ComboBoxItem x:Uid="ComboBoxItem_3" Tag="{x:Static model:WallpaperType.Video}">视频壁纸</ComboBoxItem>

        </ComboBox>
        <TextBlock
            x:Uid="DirDesc" x:Name="DirDesc"
            Grid.Row="2"
            Grid.Column="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            Text="参数"
            TextWrapping="Wrap" />
        <TextBox
            x:Uid="Dir" x:Name="Dir"
            Grid.Row="2"
            Grid.Column="1"
            local:DragManager.CanDrag="True" />
        <TextBlock
            x:Uid="Parameter2" x:Name="EndPointDesc"
            Grid.Row="3"
            Grid.Column="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            Text="参数2"
            TextWrapping="Wrap" />
        <TextBox
            x:Uid="EndPoint" x:Name="EndPoint"
            Grid.Row="3"
            Grid.Column="1"
            local:DragManager.CanDrag="True" />
        <TextBlock
            x:Uid="ArgumentsDesc" x:Name="ArgumentsDesc"
            Grid.Row="4"
            Grid.Column="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            Text="参数2"
            TextWrapping="Wrap" />
        <TextBox
            x:Uid="Arguments" x:Name="Arguments"
            Grid.Row="4"
            Grid.Column="1"
            local:DragManager.CanDrag="True" />
        <TextBlock
            x:Uid="TextBlock_3" Grid.Row="5"
            Text="作者"
            TextWrapping="Wrap" />
        <TextBox
            x:Uid="Author" x:Name="Author"
            Grid.Row="5"
            Grid.Column="1" />
        <StackPanel
            x:Uid="StackPanel_1" Grid.Row="9"
            Grid.ColumnSpan="10"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button x:Uid="Apply" x:Name="Apply">测试壁纸</Button>
            <Button x:Uid="Clean" x:Name="Clean" Margin="10,0">取消测试</Button>
        </StackPanel>
        <StackPanel
            x:Uid="StackPanel_2" Grid.Row="12"
            Grid.ColumnSpan="10"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button x:Uid="Generate" x:Name="Generate">生成壁纸</Button>
            <Button x:Uid="Publish" x:Name="Publish" Margin="10,0">发布壁纸</Button>
        </StackPanel>
        <!--<Button Grid.Row="4" Click="btn_RestartExploer">重置桌面</Button>-->
    </Grid>
</Window>
