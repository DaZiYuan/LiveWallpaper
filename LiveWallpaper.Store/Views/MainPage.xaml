<Page
    x:Class="LiveWallpaper.Store.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="using:Caliburn.Micro"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:util="using:DZY.DotNetUtil.UWP.Controls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <ContentControl cm:View.Context="MasterView" cm:View.Model="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="DetailsTemplate">
            <ContentControl
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                cm:View.Context="DetailsView"
                cm:View.Model="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="NoSelectionContentTemplate">
            <TextBlock x:Uid="Main_NoSelection" Style="{StaticResource ListNoSelectionTextStyle}" />
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ContentArea" DataContext="{Binding Server}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Uid="txt_tags"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
        <ListBox
            Grid.Column="1"
            VerticalAlignment="Center"
            cm:Message.Attach="[Event SelectionChanged]=[Action LoadWallpapers()]"
            BorderThickness="0"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Tags}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedTag}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <TextBlock
            x:Uid="txt_sorts"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
        <ListBox
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            cm:Message.Attach="[Event SelectionChanged]=[Action LoadWallpapers()]"
            BorderThickness="0"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Sorts}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedSort}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <controls:MasterDetailsView
            x:Name="MasterDetailsViewControl"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            BorderBrush="Transparent"
            DetailsTemplate="{StaticResource DetailsTemplate}"
            ItemTemplate="{StaticResource ItemTemplate}"
            ItemsSource="{x:Bind ViewModel.Items}"
            Loaded="MasterDetailsViewControl_Loaded"
            NoSelectionContentTemplate="{StaticResource NoSelectionContentTemplate}"
            SelectedItem="{x:Bind ViewModel.ActiveItem, Mode=OneWay}" />
        <util:BusyIndicator
            Grid.RowSpan="3"
            Grid.ColumnSpan="2"
            Width="50"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsBusy="{Binding IsBusy}"
            IsBusy1="{Binding IsLoadingWallpaper}" />
    </Grid>
</Page>
